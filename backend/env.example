# Database
DATABASE_URL="postgresql://username:password@localhost:5432/plantakeoff?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Redis (for queues and caching)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Wasabi S3-Compatible Storage (for file storage)
WASABI_ENDPOINT="https://s3.wasabisys.com"
WASABI_REGION="us-east-1"
WASABI_ACCESS_KEY_ID=""
WASABI_SECRET_ACCESS_KEY=""
WASABI_BUCKET_NAME="plantakeoff-files"

# API Configuration
PORT=3000
API_PREFIX="v1"
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRIES=3

# Processing Configuration
MAX_FILE_SIZE=104857600  # 100MB
SUPPORTED_MIME_TYPES="application/pdf,image/vnd.dwg,application/vnd.dwg,model/vnd.ifc"

# Logging
LOG_LEVEL="info"

# Development
NODE_ENV="development"
